{
  "name": "@sbc-connect/nuxt-base",
  "type": "module",
  "version": "0.6.1",
  "repository": "github:bcgov/connect-nuxt",
  "license": "BSD-3-Clause",
  "main": "./nuxt.config.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nuxi dev .playground",
    "prepare": "nuxt prepare .playground",
    "build": "nuxt build .playground",
    "build:test": "pnpm generate && npx serve .playground/.output/public",
    "generate": "nuxt generate .playground",
    "preview": "npx serve .playground/.output/public",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "pnpm run test:unit; pnpm run test:e2e",
    "test:unit": "vitest run --passWithNoTests",
    "test:unit:watch": "vitest",
    "test:unit:cov": "vitest --dir tests/unit --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "typecheck": "npx nuxt typecheck"
  },
  "dependencies": {
    "@iconify-json/mdi": "1.2.3",
    "@nuxt/ui": "4.3.0",
    "@nuxtjs/i18n": "10.2.1",
    "@vueuse/core": "14.1.0",
    "@vueuse/nuxt": "14.1.0",
    "dompurify": "3.3.1",
    "es-toolkit": "1.43.0",
    "launchdarkly-vue-client-sdk": "2.4.1",
    "luxon": "3.7.2",
    "maska": "3.2.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "catalog:",
    "@sbc-connect/eslint-config": "workspace:*",
    "@sbc-connect/playwright-config": "workspace:*",
    "@sbc-connect/vitest-config": "workspace:*",
    "@types/luxon": "3.7.1",
    "dotenv": "catalog:",
    "nuxt": "catalog:",
    "typescript": "catalog:",
    "vue-tsc": "catalog:"
  }
}
